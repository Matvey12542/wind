<article>
    <header>
        <h2><a href="#">{{ post.title }}</a></h2>
        <p>
            {{ 'post.on' | trans }} <time datetime="{{ post.createdAt | date('c') }}"></time>
            {{ 'by' | trans }} <a href="#">{{ post.author.name }}</a>
        </p>
    </header>

    <p>{{ post.body | truncate(400) }} <a href="#">{{ 'read.more' | trans }}</a> </p>
</article>